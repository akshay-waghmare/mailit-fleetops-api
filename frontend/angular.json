{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "apps",
  "projects": {
    "console-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/console-app",
      "sourceRoot": "apps/console-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/console-app",
            "index": "apps/console-app/src/index.html",
            "browser": "apps/console-app/src/main.ts",
            "polyfills": [],
            "tsConfig": "apps/console-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "apps/console-app/public"
              }
            ],
            "styles": [
              "apps/console-app/src/styles.scss"
            ],
            "scripts": [],
            "server": "apps/console-app/src/main.server.ts",
            "prerender": true,
            "ssr": {
              "entry": "apps/console-app/src/server.ts"
            },
            "allowedCommonJsDependencies": [
              "maplibre-gl"
            ],
            "budgets": [
              {
                "type": "initial",
                "maximumWarning": "1MB",
                "maximumError": "2MB"
              },
              {
                "type": "anyComponentStyle",
                "maximumWarning": "2kB",
                "maximumError": "4kB"
              }
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1MB",
                  "maximumError": "2MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "console-app:build:production"
            },
            "development": {
              "buildTarget": "console-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "console-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [],
            "tsConfig": "apps/console-app/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "apps/console-app/public"
              }
            ],
            "styles": [
              "apps/console-app/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    }
  },
  "schematics": {
    "@angular/cli:component": {
      "style": "scss",
      "standalone": true
    },
    "@angular/cli:directive": {
      "standalone": true
    },
    "@angular/cli:pipe": {
      "standalone": true
    }
  }
}